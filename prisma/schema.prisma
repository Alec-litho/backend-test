generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String?
  password String    @unique
  role     Role      @default(USER)
  projects Project[] @relation("ProjectToUser")
  tasks    Task[]    @relation("TaskToUser")
}

model Project {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  creatorId   Int      @unique
  createdAt   DateTime
  tasks       Task?
  developers  User[]   @relation("ProjectToUser")
}

model Task {
  id               Int      @id @default(autoincrement())
  name             String
  description      String
  projectId        Int      @unique
  deadline         DateTime
  status           Status
  project          Project  @relation(fields: [projectId], references: [id])
  responsibleUsers User[]   @relation("TaskToUser")
}

enum Role {
  USER
  ADMIN
}

enum Status {
  inProgress
  isDone
  isCanceled
}
